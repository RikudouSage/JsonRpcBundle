{
    "name": "rikudou/json-rpc-bundle",
    "description": "JSON-RPC bundle for Symfony using modern php",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": "^5.0",
        "symfony/yaml": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Rikudou\\JsonRpcBundle\\": "src/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "phpstan/phpstan": "^0.12.99",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpstan/phpstan-symfony": "^0.12.44",
        "phpstan/extension-installer": "^1.1"
    },
    "scripts": {
        "fixer": "php-cs-fixer fix src --verbose",
        "phpstan": "phpstan analyse --level max src"
    }
}
